<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/adminPanel.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">

    <title>Admin Panel</title>

    <style>
        .container {
            margin: 120px 50px 75px;
            padding: 10px;
            color: black;
        }

        table {
            width: 100%;
            text-align: center;
        }

        thead th,
        tbody td {
            color: black;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            background-color: white !important;
            color: black !important;
            border: 1px solid #ddd;
            padding: 5px 10px;
            margin: 2px;
            border-radius: 4px;
        }

        /* Hover effect for pagination buttons */
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background-color: #f2f2f2 !important;
            color: black !important;
        }

        /* Active button styling */
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background-color: #007bff !important;
            color: white !important;

            
        }
        .profile-pic {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                z-index: -10px;
            }
    </style>
</head>

<body>
    <%- include('partials/header') %>

        <div class="container">
            <div id="admin-name" style="text-align: center;">Welcome, <%= adminName %>!</div>
            <table id="example" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Profile Picture</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= user.username %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <% if (user.profilePicture) { %>
                                    <img src="/uploads/profile_pics/<%= user.profilePicture %>" alt="Profile Picture"
                                        width="50" class="profile-pic">
                                    <% } else { %>
                                        <span><img src="/uploads/profile_pics/default.png" alt="Profile Picture"
                                                class="profile-pic"></span>
                                        <% } %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Profile Picture</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <%- include('partials/footer') %>


            <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
            <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
            <script src="/Movie-Recommendation-System/public/js/scripts.js"></script>
            <script src="/js/scripts.js"></script>
            <script>
                new DataTable('#example');
            </script>
</body>

</html>