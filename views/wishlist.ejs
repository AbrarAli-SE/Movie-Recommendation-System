<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/wishlist.css"> <!-- Use absolute path for the stylesheet -->
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <title>Wishlist</title>
</head>

<body>
    <main>
        <div class="user-wishlist">
            <div class="image-container">
                <% if (wishlist.length > 0) { %>
                    <% wishlist.forEach(movie => { %>
                    <div class="image-item" data-movie-id="<%= movie.id %>">
                        <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="<%= movie.title %>">
                        <div class="overlay">
                            <a href="/movies/details/<%= movie.id %>" class="detail">More Details</a>
                        </div>
                        <div class="options-menu">
                            <span class="three-dots"><i class="bi bi-three-dots"></i></span>
                            <div class="options-dropdown">
                                <ul>
                                    <li class="delete-option">Delete</li>
                                    <li class="cancel-option">Cancel</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <p>No movies in your wishlist</p>
                <% } %>
            </div>
        </div>
    </main>
    <script src="/js/wishlist.js"></script>
</body>
</html>
